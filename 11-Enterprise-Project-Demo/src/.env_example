# Application
APP_NAME=enterprise-delivery-command-center
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Keys (REQUIRED)
OPENAI_API_KEY="<api-key>"
LANGSMITH_API_KEY = "<api-key>"
LANGCHAIN_TRACING_V2="true"
LANGCHAIN_PROJECT="delivery-command-center"

# Database (REQUIRED)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=delivery_center
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
VECTOR_DB_SCHEMA=vector_store
CHAT_DB_SCHEMA=chat_store

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JIRA (REQUIRED)
JIRA_SERVER="https://nachikethmurthy.atlassian.net"
JIRA_EMAIL="<email>"
JIRA_API_TOKEN="api-token"

# ServiceNow (Optional)
SERVICENOW_INSTANCE=
SERVICENOW_USERNAME=
SERVICENOW_PASSWORD=

# Security (REQUIRED)
JWT_SECRET_KEY="<secret-key>"
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# LLM Settings
DEFAULT_MODEL="gpt-4.1-nano"
EMBEDDING_MODEL="text-embedding-3-small"
MAX_TOKENS=4000
TEMPERATURE=0.3

# Evaluation Thresholds
EVAL_GROUNDEDNESS_THRESHOLD=0.8
EVAL_COMPLETENESS_THRESHOLD=0.85
EVAL_POLICY_COMPLIANCE_THRESHOLD=0.95
EVAL_ACTION_ACCURACY_THRESHOLD=0.9
EVAL_COMMUNICATION_QUALITY_THRESHOLD=0.85

# Monitoring
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_PORT=8000
